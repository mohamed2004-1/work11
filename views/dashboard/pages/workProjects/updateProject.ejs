<%- include('../../partials/headerLayout.ejs', {pageName: "workProjects", pageTitle: "work Projects Page", pathLevel: "/"}) %>

<h3>Edit Project</h3>
<table>
    <tr>
        <td>
            <form action="../update" method="post">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%= oneProject[0].title %>">
                <br>
                <label for="description">description</label>
                <input type="text" name="description" id="description" value="<%= oneProject[0].description %>">
                <br>
                <label for="photo">photo</label>
                <input type="file" name="photo" id="photo" onchange="photoPreviewFn(this);">
                <br>
                <input type="hidden" name="id" value="<%= oneProject[0].id %>">
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </td>
        <td>
            <img src="../../../uploades/<%= oneProject[0].photo %>" id="photoPreview" alt="photo preview" style="max-width: 55%; max-height: 55%;">
        </td>
    </tr>
</table>
<script>
    function photoPreviewFn(inputFile) {
        var file = inputFile.files[0];
        if (file) {
            var reader = new FileReader();
            reader.onload = () => {
                document.getElementById("photoPreview").setAttribute("src", reader.result);
            }
            reader.readAsDataURL(file);
        }
    }
</script>
